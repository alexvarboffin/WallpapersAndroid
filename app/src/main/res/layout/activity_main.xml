<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    n1:layout_width="match_parent"
    n1:layout_height="match_parent"
    n1:padding="30.0dip">

    <androidx.cardview.widget.CardView xmlns:n2="http://schemas.android.com/apk/res-auto"
        n1:id="@+id/card_view"
        n1:layout_width="match_parent"
        n1:layout_height="match_parent"
        n1:layout_gravity="center"
        n1:visibility="visible"
        n2:cardCornerRadius="4.0dip">


        <RelativeLayout
            n1:id="@+id/banner_container"
            n1:layout_width="match_parent"
            n1:layout_height="match_parent"
            n1:orientation="vertical">

            <ImageView
                n1:id="@+id/button_cancel"
                n1:layout_width="48.0dip"
                n1:layout_height="48.0dip"
                n1:layout_alignParentRight="true"
                n1:clickable="true"
                n1:contentDescription="@string/app_name"
                n1:src="@drawable/ic_cancel" />

            <TextView
                n1:id="@+id/headline"
                n1:layout_width="match_parent"
                n1:layout_height="wrap_content"
                n1:layout_alignParentBottom="true"
                n1:background="#99000000"
                n1:gravity="center"
                n1:padding="5.0dip"
                n1:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                n1:textColor="@android:color/white"
                tools:text="@string/app_name" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>